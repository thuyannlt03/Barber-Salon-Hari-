<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/edt_tenadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:backgroundTint="#00000000"
            android:hint="Nhập họ và tên"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/edt_usernameadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:backgroundTint="#00000000"
            android:hint="Nhập username"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/edt_passadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:backgroundTint="#00000000"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/btn_ShowHiddenPassadd"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/hiddenpasss_togget"
            android:backgroundTint="@null"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/edt_Rematkhauadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:backgroundTint="#00000000"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/btn_ShowHiddenPassadd2"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/hiddenpasss_togget"
            android:backgroundTint="@null"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal"
        android:padding="5dp">

        <Spinner
            android:id="@+id/spn_loaiadd"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>



</LinearLayout>